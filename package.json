{
  "name": "xrc",
  "description": "React Components",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Matthew Wagerfield <matthew@wagerfield.com>",
  "homepage": "https://github.com/wagerfield/xrc#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wagerfield/xrc.git"
  },
  "bugs": {
    "url": "https://github.com/wagerfield/xrc/issues"
  },
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "format": "prettier --write '*.{json,md}' 'src/**/*.{ts,tsx}'",
    "prepare": "yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{json,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "react": "^16.8.6",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "typescript": "^3.4.1"
  }
}
