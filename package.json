{
  "name": "xrc",
  "description": "xrc",
  "version": "0.5.7",
  "license": "MIT",
  "author": "Matthew Wagerfield <matthew@wagerfield.com>",
  "homepage": "https://github.com/wagerfield/xrc#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wagerfield/xrc.git"
  },
  "bugs": {
    "url": "https://github.com/wagerfield/xrc/issues"
  },
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "types/index.d.ts",
  "files": [
    "cjs",
    "esm",
    "types"
  ],
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "types": "tsc --emitDeclarationOnly",
    "dev": "tsc --watch --skipLibCheck",
    "bundle": "rollup --config",
    "watch": "rollup --config --watch",
    "format": "prettier --write '**/*.{json,js,md,ts,tsx}'",
    "lint": "tslint --fix --format codeFrame 'src/**/*.{ts,tsx}'",
    "clean": "rimraf cjs esm lib types 'site/{artifacts,dist,tmp}'",
    "preflight": "yarn clean && yarn types && yarn bundle && yarn format",
    "prepublishOnly": "yarn preflight"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "jest --findRelatedTests",
      "git add"
    ],
    "**/*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@emotion/core": "10.0.10",
    "@types/react": "16.8.18",
    "emotion-theming": "10.0.10",
    "onno-react": "0.4.0",
    "react": "16.8.6"
  },
  "devDependencies": {
    "@commitlint/cli": "8.0.0",
    "@commitlint/config-conventional": "8.0.0",
    "@types/jest": "24.0.13",
    "husky": "2.4.0",
    "jest": "24.8.0",
    "lint-staged": "8.2.0",
    "prettier": "1.17.1",
    "rimraf": "2.6.3",
    "rollup": "1.14.2",
    "rollup-plugin-prettier": "0.6.0",
    "rollup-plugin-size-snapshot": "0.8.0",
    "rollup-plugin-typescript": "1.0.1",
    "ts-jest": "24.0.2",
    "tslib": "1.9.3",
    "tslint": "5.17.0",
    "typescript": "3.5.1"
  }
}
