{
  "name": "xrc",
  "description": "xrc",
  "version": "0.3.0",
  "license": "MIT",
  "author": "Matthew Wagerfield <matthew@wagerfield.com>",
  "homepage": "https://github.com/wagerfield/xrc#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wagerfield/xrc.git"
  },
  "bugs": {
    "url": "https://github.com/wagerfield/xrc/issues"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "build": "tsc --noEmitOnError",
    "dev": "tsc --watch --skipLibCheck",
    "lint": "tslint --fix --format codeFrame 'src/**/*.{ts,tsx}'",
    "format": "prettier --write '*.{json,md}' 'src/**/*.{ts,tsx}'",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "**/*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@emotion/core": "10.0.10",
    "@types/ramda": "0.26.8",
    "@types/react": "16.8.14",
    "csstype": "2.6.4",
    "emotion-theming": "10.0.10",
    "ramda": "0.26.1",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "styled-system": "4.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "husky": "2.1.0",
    "lint-staged": "8.1.5",
    "prettier": "1.17.0",
    "rimraf": "2.6.3",
    "tslint": "5.16.0",
    "typescript": "3.4.5"
  }
}
