{
  "compilerOptions": {
    "baseUrl": "packages",
    "paths": {
      "xrc": ["xrc/src"]
    },
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "jsx",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "declaration": true,
    "strict": true
  }
}
