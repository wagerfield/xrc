{
  "include": ["src"],
  "compilerOptions": {
    "outDir": "lib",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "jsxFactory": "jsx",
    "strict": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "declaration": true,
    "declarationDir": "types"
  }
}
