{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/**/*.spec.tsx", "src/**/*.stories.tsx"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",

    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",

    "lib": ["es2015", "dom"],
    "jsx": "react",

    "strict": true,
    "noUnusedLocals": true,

    "declaration": true,
    "noEmitOnError": true
  }
}
